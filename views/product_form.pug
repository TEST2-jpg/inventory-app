extends layout

block content
  h1= title
  -let categories = category
  form(method='POST' action='')
    div.form-group
      label(for='name') Title:
      input#name.form-control(type='text', placeholder='Name of product' name='name' required='true' value=(undefined===product ? '' : product.name) )
    -console.log(results)
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===product ? '' : product.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='price' name='price' value=(undefined===product ? '' : product.price) required='true')
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number', placeholder='stock' name='stock' value=(undefined===product ? '' : product.stock) required='true')
    div.form-group
      label(for='type') type:
      input#name.form-control(type='text', placeholder='Name of type' name='type' required='true' value=(undefined===product ? '' : product.type) )
    div.form-group
      label Genre:
      div
        for category in categories || results.categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
